<!-- Content -->			
#content
  %img(src='http://www.4thsource.com//public/images/subheader_services.jpg' class='subheader' alt='Sub Header')
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path 
      = raw '&raquo;'
    %li
      = link_to_resume("My profile", @candidate.id, :action => "resume")
      = raw '&raquo;'
    %li= raw('<em>Project</em>')
    .clear
  %h3.page_headline 
    %i.iconExperienceHeadLine
    .h3-page-headline
      = @title
  .divider-headline
  %br
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
  %br
  =link_to_resume("Add Project", @candidate.resume.id, :action => "project-new")
  %br
  %br
  - if @project_items.count > 0
    #list
      - @project_items.each do |project|
        %br
        #row
          = render project
          %br
          %br
        %br
  - else
    %h4 Please create at least one project.
    .divider
  %br
  .clear	
<!-- Sidebar -->
= render 'shared/sidebar_signed'