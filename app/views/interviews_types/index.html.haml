<!-- Content -->      
#content
  %img(src='http://www.4thsource.com//public/images/subheader_services.jpg' class='subheader' alt='Sub Header')
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path 
      = raw '&raquo;'
    %li
      = raw('<em>Catalogues</em>')
      = raw '&raquo;'
    %li
      = raw('<em>Interview Type</em>')
    .clear
  %h3.page_headline 
    %i.iconExperienceHeadLine
    .h3-page-headline
      Interviews type
  .divider-headline
  %br
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
  %br
  = link_to "New", :controller => "interviews_types", :action => "new"
  %br
  %br
  - if InterviewsType.all.count > 0 
    #list
      %br
      - InterviewsType.all.each do |interview_type|
        %br
        #row
          .experience_details_wrapper
          .experience_details_left
            %strong
              = interview_type.description
          .experience_details_right
            = link_to "Edit", :controller => "interviews_types", :action => "edit", :id => current_candidate.id, :interview_type_id => interview_type.id
            &nbsp;&nbsp;&nbsp;
            = link_to "Delete", url_options = { :controller => "interviews_types", :action => "delete", :id => current_candidate.id, :interview_type_id => interview_type.id }, html_options = { :confirm => "Are you sure?" }
          %br 
  - else
    %h4 Please create at least one interview type.
    .divider
  %br
  .clear
<!-- Sidebar -->
= render 'shared/sidebar_signed'