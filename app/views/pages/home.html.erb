<div id="container-info">
  <div id="sidebar-a">
    <% if signed_in? %>
      <div id="sidebar-gravatar">                        
        <%= gravatar_for current_user, :size => 30 %>
      </div>
      <div id="sidebar-user">
        <strong><%= current_user.name %></strong> <br/>
        <strong><%= current_user.microposts.count %> microposts</strong>
      </div>
    <% end %>
  </div>
  <div id="content">
      <% if signed_in? %>
        <table class="front" summary="For signed-in users">
          <tr>
            <td class="main">
              <div id="content-margin">
                <% flash.each do |key, value| %>
                  <div class="flash <%= key %>"><%= value %></div>
                <% end %>
                <h1 class="micropost">What's up?</h1>
                <%= render 'shared/micropost_form' %>
              </div>
              <div id="feed">
                <%= render 'shared/feed' %>
              </div>
            </td>
         </tr>
       </table> 
     <% else %>
       <h1>Sample App</h1>
       <p>
         This is the home page for the
         <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a> sample application.
       </p>
       <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %> 
     <% end %>
  </div>
</div>
