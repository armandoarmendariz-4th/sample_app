<!-- content -->			
#content
  %img(src='http://www.4thsource.com//public/images/subheader_services.jpg' alt='Sub Header' class='subheader')
  %ul#breadcrumbs
    %li
      = link_to 'Home', '#' 
      = raw '&raquo;'
    - if signed_in?
      %li
        = raw '<em>'
        = current_user.name
        = raw '</em>'
    .clear						
  - if signed_in?
    %table{:class => 'front'}
      %tr
        %td.main
          #content-margin
            %h1.micropost What is happening?
            = render 'shared/micropost_form'
            %br
            #feed
            - if @page_results.size>0
              #search
                #search-form
                  - form_tag({ :action => "search" }, :method => "get") do
                    = raw '<fieldset>'
                    .form_row
                      %label{:for => "q"} Search feeds:
                      = text_field_tag "q", params[:q], :class => "search-text-field" 
                      %input{:type => "submit", :value => "Search"}
                    = raw '</fieldset>'
                #search-results
                  #flash
                    - flash.each do |key, value|
                      .flash{:class => key}= value
            #feed
              = render 'shared/feed'
  - else
    %h1 Sample App
    %p
      This is the home page for the
      = link_to 'Ruby on Rails Tutorial', 'http://railstutorial.org'
      sample application.
    = link_to "Sign up now!", signup_path, :class => "signup_button round"
    .clear
<!-- Sidebar -->
#sidebar
  <!-- Subnav -->
  %h4#if_sub_nav
    = link_to 'Profile Information', '#'
  #if_subnav.divider
    - if signed_in?
      #sidebar-profile
        #sidebar-gravatar
          =link_to("#") do 
            = image_tag @user.avatar.url(:thumb)
        #sidebar-user
          = current_user.name
          %br
          = current_user.microposts.count 
          microposts
      %br
    %br
    %ul#nav_sub.sub_navigation
      %li
        %i.iconContact-info
        = link_to 'Contact Information', '#', :class => "profile-sub_navigation"
      %li
        %i.iconPhoto 
        =link_to 'Photo', '#', :class => "profile-sub_navigation"
      %li
        %i.iconSummary
        = link_to_resume('Summary', @user.id, :action => 'summary', :class => 'profile-sub_navigation')
      %li
        %i.iconExperience
        = link_to_resume('Experience', @user.id, :action => 'experience', :class => 'profile-sub_navigation')
      %li
        %i.iconEducation
        = link_to 'Education', '#', :class => "profile-sub_navigation"
      %li
        %i.iconSkills
        = link_to 'Skills', skills_path, :class => "profile-sub_navigation"
      %li
        %i.iconMembershipAwards
        = link_to 'Certifications & Awards', '#', :class => "profile-sub_navigation"
      %li.last
        %i.iconInterests
        = link_to_resume('Idioms', @user.id, :action => 'idioms', :class => 'profile-sub_navigation')
    %br
    .clear
