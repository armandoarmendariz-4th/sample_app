<!-- Content -->			
#content
  %img(src='http://www.4thsource.com//public/images/subheader_services.jpg' class='subheader' alt='Sub Header')
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path 
      = raw '&raquo;'
    %li
      = link_to_resume("My profile", @candidate.id, :action => "resume")
      = raw '&raquo;'
    %li
      =link_to_project("Projects", @candidate.id, :action => "index")
      = raw '&raquo;'
    %li= raw('<em>view</em>')
    .clear
  %h3.page_headline 
    %i.iconExperienceHeadLine
    .h3-page-headline
      = @title
  .divider-headline
  %br
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
  =link_to_project("Back", @candidate.id, :action => "index")
  %br
  %br
  = form_for(:project, :action => "update", :html => {:class => "proj"}) do |f|
    .field
      = f.label "Employer"
      %br
      = f.text_field :company_name
    .field
      = f.label "Project name"
      %br
      = f.text_field :name 
    .field
      = f.label "Summary"
      %br 
      = f.text_area :summary
  %br
  %h3.page_headline 
    .h3-page-headline
      Roles
  .divider-headline
  %br
  =link_to_projrole("Add Role", @candidate.id, @project.id, @projrole.id, :action => "new")
  %br
  - if @projroles_items.count > 0
    %list
      - @projroles_items.each do |role|
        %br
        #row
          .experience_details_wrapper
          .experience_details_left
            %strong
              = Role.find_by_id(role.roles_id).name
          .experience_details_right
            /= link_to "View", :controller => "projroles", :action => "show", id:@candidate.id, :project_id=> @project.id, :projrole_id=> role.id
            /&nbsp;&nbsp;&nbsp;
            = link_to "Edit", :controller => "projroles", :action => "update", id:@candidate.id, :project_id=> @project.id, :projrole_id=> role.id
            &nbsp;&nbsp;&nbsp;
            = link_to "Delete", url_options = { :controller => "projroles", :action => "destroy", id:@candidate.id, :project_id=> @project.id, :projrole_id=> role.id }, html_options = { :confirm => "Are you sure?" }
            %br
            %br
            =link_to_projrole("Add responsibility", @candidate.id, @project.id, role.id, :action => "respon-new")
          %br
          .experience_details_wrapper
          .experience_details_left
            &nbsp;&nbsp;&nbsp;&nbsp;
            = role.date_in
            &nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;&nbsp;
            = role.date_out
            
            - if role.roles_responsibilities.nil? && role.roles_responsibilities.count > 0
              %list
                - role.roles_responsibilities.each do |respon|
                  %br
                  #row
                    .experience_details_wrapper
                    .experience_details_left
                      = respon.description
                    .experience_details_right
                      = link_to "Delete", url_options = { :controller => "roles_responsibilities", :action => "destroy", id:@candidate.id, :project_id=> @project.id, :projrole_id=> @role.id, :rolerespon_id=> respon.id }, html_options = { :confirm => "Are you sure?" }
                    %br 
                  %br
            - else
              %br
              Please create at least one responsibility.
        %br
        %br
        %br
        %br 
  - else
    %br
    %h4 Please create at least one role.
  %br
  .clear 
<!-- Sidebar -->
= render 'shared/sidebar_signed'