<!-- Content -->
#content
  %img(src="http://www.4thsource.com//public/images/subheader_services.jpg" alt="Sub Header" class="subheader")
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path 
      = raw '&raquo;'
    %li
      = link_to_resume("My profile", @candidate.id, :action => "resume")
      = raw '&raquo;'
    %li= raw('<em>Candidates Profiles</em>')
    .clear

  %h3.page_headline
    %i.iconExperience
    .h3-page-headline
      Candidates Profiles
  .divider
  %br

  - if @candidate.candidates_profiles.count > 0
    .clearfix
      - @candidate.candidates_profiles.each do |candidate_profile|
        %br        
        .experience_details_wrapper
          .experience_details_left
            %h4
              = candidate_profile.name
            %h7
              = candidate_profile.summary
            
            %br
          .experience_details_right
            = link_to "Edit", :controller => "candidate_profiles", :action => "edit", candidate_id:@candidate.id, :candidate_profile_id=> candidate_profile.id
            &nbsp;&nbsp;&nbsp;
            = link_to "Delete", url_options = { :controller => "candidate_profiles", :action => "delete", :candidate_id => current_candidate.id, :candidate_profile_id => candidate_profile.id }, html_options = { :confirm => "Are you sure?" }
            %br
            %br

              
  - else
    %h4 Please create at least one profile for the candidate
    .divider

  %br
  %br
  #cprofile_box_wrapper
    %h3.page_headline
      New Candidate Profile

    = form_for(:candidateprofile, :url=>{:action=>'create'}) do |f|
      %h4
        Please enter the following information
      .divider
      .row-fluid
        .field
          = f.label :name
          %br
          = f.text_field :name
      .row-fluid
        .field.width100percent
          = f.label :summary
          %br
          = f.text_area :summary, {"class"=>"width100percent"}
      .actions
        %br
        = f.submit "Submit",{"class"=>"btn btn-primary"}

<!-- Sidebar -->
= render 'shared/sidebar_signed'    
