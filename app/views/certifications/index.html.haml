<!-- Content -->			
#content
  %img(src='http://www.4thsource.com//public/images/subheader_services.jpg' class='subheader' alt='Sub Header')
  %ul#breadcrumbs
    %li
      = link_to 'Home', home_path 
      = raw '&raquo;'
    %li
      = link_to_resume('Resume', @candidate.id, :action => 'resume')
      = raw '&raquo;'
    %li= raw('<em>Certifications</em>')
    .clear
  %h3.page_headline 
    %i.iconInterestsHeadLine
    .h3-page-headline
      Certifications
  .divider-headline
  %br
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
    %br
    = link_to_resume('Back to Resume', @candidate.id, :action => 'resume')
    %br
    %br
    %br
    %h4
      List of certifications
    .divider
    %br
    - if @total_certifications.count > 0
      #list
        - @total_certifications.each do |certification|
          %br
          #row
            .experience_details_wrapper
              .experience_details_left
                %h6
                  = certification.name
                #experience-date
                  
                %br
              .experience_details_right
                = link_to "Delete", :controller => "certifications", :action => "destroy", :id=> certification.id
    - else
      %h4 Please create at least one certification in your resume.
      .divider
    %br 
  %br 
  %br 
  .experience_details_wrapper
    .experience_details_left
      = form_for(:certification, :controller=>"resume_certification", :action => "create") do |f|
        = render 'shared/error_messages', :object => f.object
        %br
        %h4
          Add a certification in your resume
        .divider
        %br
        .field
          = f.label "Certification"
          %br
          = f.text_field :name
        .actions
          %br
          = f.submit "Submit"
        .clear	
    .experience_details_right
<!-- Sidebar -->
= render 'shared/sidebar_signed'