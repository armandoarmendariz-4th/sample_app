<!-- Content -->
#content
  %img(src="http://www.4thsource.com//public/images/subheader_services.jpg" alt="Sub Header" class="subheader")
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path
      = raw '&raquo;'
    %li
      = link_to_resume('My Profile', @candidate.id, :action => 'resume')
      = raw '&raquo;'
    %li
      = raw '<em>'
      Edit
      = raw '</em>'
    .clear
  %h3.page_headline
    %i.iconContact-infoHeadLine
    .h3-page-headline
      Contact Information
  .divider-headline
  %br
  = form_for(@candidate) do |f|
    = render 'shared/error_messages', :object => f.object
    .row-fluid
      .field
        = f.label "Image"
        %br
        = f.file_field :avatar_file_name
    .row-fluid
      .span5
        .field
          = f.label :first_name
        = f.text_field :first_name
        .field
          = f.label :first_last_name
        = f.text_field :first_last_name
      .span5
        .field
          = f.label :middle_name
        = f.text_field :middle_name
        .field
          = f.label :second_last_name
        = f.text_field :second_last_name
    .row-fluid
      .span5
        .field
          = f.label :gender
          %br
        = f.select :gender, gender_list
      .span7
        .field
          = f.label :birthdate
          %br
        .birthdate= date_select(:candidate, :birthdate, :start_year => 1950, :order => [:month, :day, :year])
        %br
    .divider
    .row-fluid
      .span5
        .field
          = f.label :email
        = f.text_field :email
      .span3
        .field
          = f.label :password
        = f.password_field :password
      .span3
        .field
          = f.label :password_confirmation
        = f.password_field :password_confirmation
    .row-fluid
    %br
    .divider
    .row-fluid
      .span5
        .field
          = f.label :address
        = f.text_field :address
      .span3
        .field
          = f.label :city
        = f.text_field :city
      .span3
        .field
          = f.label :zip_code
        = f.text_field :zip_code
    .row-fluid
      .span5
        .field
          = f.label :country
        = f.select :country, country_list
    %br
    .divider
    .row-fluid
      .span3
        .field
          = f.label :home_phone
        = f.text_field :home_phone
      .span3
        .field
          = f.label :office_phone
        = f.text_field :office_phone
      .span3
        .field
          = f.label :cell_phone
        = f.text_field :cell_phone
    .divider
    .row-fluid
      .span3
        .field
          .alignCheckBox= f.check_box :is_willing_to_relocate
          .alignCheckBox= f.label :is_willing_to_relocate
        .field
          .alignCheckBox= f.check_box :is_willing_to_travel
          .alignCheckBox= f.label :is_willing_to_travel 
      .span3
        .field
          .alignCheckBox= f.check_box :has_visa
          .alignCheckBox= f.label :has_visa
        .field
          .alignCheckBox= f.check_box :has_passport
          .alignCheckBox= f.label :has_passport
      .span3
        .field#visaShowHide
          = f.label :visa_expiration_year
          = f.text_field :visa_expiration_year
        .field#passportShowHide
          = f.label :passport_expiration_year
          = f.text_field :passport_expiration_year   
    %br
    .divider
    .row-fluid
      .span3
        .field.currentlyEmployed
          .alignCheckBox= f.check_box :currently_employed
          .alignCheckBox= f.label :currently_employed
      .span3
        .field.employedShowHide
          = f.label :company
          = f.text_field :company
      .span3
        .field.employedShowHide
          = f.label :position
          = f.text_field :position
    .row-fluid
      .span3
        .field
          = f.label :current_salary
          = f.text_field :current_salary
      .span3
        .field
          = f.label :salary_expectancy
          = f.text_field :salary_expectancy
    .row-fluid
      = f.label :comments
      = f.text_area :comments
    .actions
      %br      
      = f.submit "Update",{"class"=>"btn btn-primary"}
      %script jQuery(document).ready(function(){Profile.start();});
<!-- Sidebar -->
= render 'shared/sidebar_signed'