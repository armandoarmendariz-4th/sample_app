<!-- Content -->			
<div id="content">
  <img src="http://www.4thsource.com//public/images/subheader_services.jpg" alt="Sub Header" class="subheader" />
  <ul id="breadcrumbs">
    <li><a href="#">Home</a> &raquo; </li>
    <li><em>Sign up</em></li>
	<div class="clear"></div>
  </ul>
  <h3 class="page_headline ">Sign up</h3>
  <div class="divider"></div>
  <%= form_for(@user) do |f| %> 
    <%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %> 
    </div>
    <div class="field">
      <%= f.label :email %><br /> <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %> 
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirmation" %><br /> 
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up" %> 
    </div>
  <% end %>  
  <div class="clear"></div>
</div> <!-- End Content -->
	
