<!-- Content -->
#content
  %img(src="http://www.4thsource.com//public/images/subheader_services.jpg" alt="Sub Header" class="subheader")
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path
      = raw '&raquo;'
    %li
      = link_to_resume('My Profile', current_candidate.id, :action => 'resume')
      = raw '&raquo;'
    %li
      = raw '<em>'
      Education
      = raw '</em>'
    .clear
  %h3.page_headline
    %i.iconEducation
    .h3-page-headline
      Education
  .divider-headline
  %br
  -@education.each do |e|
    = form_for(:e, :url=>{:action=>'update_delete'}) do |f|
      %h3.page_headline
        = e.university
      .field
        = f.hidden_field :id, :value => e.id
      .field
        = f.label :title
        %br
        = f.text_field :title, :value => e.title
      .field
        = f.label :educ_degree_id
        %br
        = f.select :educ_degree_id, options_from_collection_for_select(EducDegree.where({:approved_flag => [true, false]}).all, "id", "name", :selected => e.educ_degree_id)
      .field
        = f.label :university
        %br
        = f.text_field :university, :value => e.university
      .field 
        = f.label :date_in
        %br
        = f.date_select :date_in, :default => e.date_in, :start_year => 1950, :order => [:month, :day, :year]
      .field
        = f.label :date_out
        %br
        = f.date_select :date_out, :default => e.date_out, :start_year => 1950, :order => [:month, :day, :year]
      %br
      = submit_tag "Update", :name => 'update_button'
      = submit_tag "Delete", :name => 'delete_button'
    %br
    %br
  = render 'candidate_education/new'
<!-- Sidebar -->
= render 'shared/sidebar_signed'