<div class="candidate_info">
  <a href="<%= candidate_path(current_candidate) %>">
  <%= gravatar_for current_candidate, :size => 30 %> 
  <span class="candidate_name">
    <%= current_candidate.name %> 
  </span>
  <span class="microposts">
    <%= pluralize(current_candidate.microposts.count, "micropost") %>
  </span>
  </a>
</div>
