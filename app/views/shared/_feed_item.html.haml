%tr.feed-content
  %td.gravatar
    = link_to gravatar_for(feed_item.candidate), feed_item.candidate 
  %td.micropost 
    %span(class='candidate')
      = link_to feed_item.candidate.first_name, feed_item.candidate 
    %span(class='content')
      = feed_item.content
    %span(class='timestamp')
      Posted 
      = time_ago_in_words(feed_item.created_at)
      ago.
  - if current_candidate?(feed_item.candidate) 
    %td.micropost-delete
      = link_to "delete", feed_item, :method => :delete, :confirm => "You sure?", :title => feed_item.content
