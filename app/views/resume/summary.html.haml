<!-- Content -->		
#content
  %img(src='http://www.4thsource.com//public/images/subheader_services.jpg' class='subheader' alt='Sub Header')
  %ul#breadcrumbs
    %li
      = link_to 'Home', root_path 
      = raw '&raquo;'
    %li
      = link_to_resume("Resume", @candidate.id, :action => "resume")
      = raw '&raquo;'
    %li= raw('<em>Summary</em>')
    .clear
  %h3.page_headline 
    %i.iconSummaryHeadLine
    .h3-page-headline
      Professional Summary
  .divider-headline
  %br
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
  %br
  = link_to_resume('Back to Resume', @candidate.id, :action => 'resume')
  %br
  %br
  - if @candidate.candidate_prof_summary.count > 0
    .experience_details_wrapper
      %ul
        - @candidate.candidate_prof_summary.each do |detail|
          .experience_details_left
            %li= detail.summary
          .experience_details_right
            = link_to 'Delete', detail, :method => :delete, :confirm => "Sure?"
            
  - else
    %br
    %br
    %h4 Please create at least one detail in the professional summary.
    .divider
    %br
    %br
    %br
    %br
  .experience_wrapper
    .experience_left
      %br
      %h4
        Please enter the following information
      .divider-headline
      = form_for(:candidate_prof_summary, :controller => "resume", :action => "summary") do |f|     
        .field
          = f.label "Summary"
          %br
          %br
          = f.text_area :summary
        .actions
          %br
          = f.submit "Add",{"class"=>"btn btn-primary"}
  .clear  
<!-- Sidebar -->
= render 'shared/sidebar_signed'