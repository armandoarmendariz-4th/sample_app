<!-- Content -->			
#content
  %img(src='http://www.4thsource.com//public/images/subheader_services.jpg' class='subheader' alt='Sub Header')
  %ul#breadcrumbs
    %li
      = link_to 'Home', home_path 
      = raw '&raquo;'
    %li
      = link_to_resume('Resume', @user.id, :action => 'resume')
      = raw '&raquo;'
    %li= raw('<em>Idioms</em>')
    .clear
  %h3.page_headline 
    %i.iconInterestsHeadLine
    .h3-page-headline
      Idioms
  .divider-headline
  %br
  #flash
    - flash.each do |key, value|
      .flash{:class => key}= value
    %br
    = link_to_resume('Back to Resume', @user.id, :action => 'resume')
    %br
    %br
    %br
    %h4
      List of idioms
    .divider
    %br
    - if @total_idioms.count > 0
      #list
        - @total_idioms.each do |idiom|
          %br
          #row
            .experience_details_wrapper
              .experience_details_left
                %h6
                  = idiom.name
                #experience-date
                  = idiom.level
                %br
              .experience_details_right
                = link_to "Delete", :controller => "idioms", :action => "destroy", :id=> idiom.id
    - else
      %h4 Please create at least one language in your resume.
      .divider
    %br 
  %br 
  %br 
  .experience_details_wrapper
    .experience_details_left
      - form_for(:idiom, @idiom, :url => '/idioms/new') do |f|
        = render 'shared/error_messages', :object => f.object
        %br
        %h4
          Add a language in your resume
        .divider
        %br
        .field
          = f.label "Language"
          %br
          = f.text_field :name
        .field
          = f.label :level
          %br
          = f.select :level, idiom_level_list
        .actions
          %br
          = f.submit "Submit"
        .clear	
    .experience_details_right
<!-- Sidebar -->
= render 'shared/sidebar_signed'